<%- include("../partials/header") %>

<div class="container">
    <div class="card border-primary bg-transparent">
        <div class="card-header">
            <h4 class="card-title">Utente</h4>
        </div>
        <div class="card-body">
            <h5 class="card-title"><%= currentUser.firstName %> <%= currentUser.lastName %> <span
                    class="font-italic">"<%= currentUser.surname %>"</span></h5>
            <p class="card-text"><%= currentUser.email %></p>
            <% if( currentUser.isVerified ){ %>

            <p class="card-text">
                <svg class="bi bi-check-square" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                    xmlns="http://www.w3.org/2000/svg">
                    <path fill-rule="evenodd"
                        d="M14 1H2a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z" />
                    <path fill-rule="evenodd"
                        d="M10.97 4.97a.75.75 0 0 1 1.071 1.05l-3.992 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.236.236 0 0 1 .02-.022z" />
                </svg>
                Verificato</p>
            <% } %>

            <p class="card-text">Numero parole inserite: <%= totWords %></p>
        </div>
    </div>
    <form id="changePasswordForm" action="/users/change" method="post">
        <div class="form-group">
            <label for="newPasswordInput_1">Cambia password:</label>
            <input id="newPasswordInput_1" class="form-control" type="password" name="newPassword_1"
                placeholder="Nuova password" required>
        </div>
        <div class="form-group">
            <input class="form-control" type="password" name="newPassword_2" placeholder="Ripeti nuova password"
                required>
        </div>
        <input type="submit" value="Salva" class="btn btn-primary text-white">
    </form>

</div>

<%- include("../partials/jsLibs") %>

</body>

</html>