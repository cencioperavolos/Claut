<% if (pages > 0) { %>
    <nav id="navigator">
        <ul class="pagination justify-content-center mt-3">
    
            <% if (page <= 1) { %>
            <li class="page-item invisible"><a class="page-link"></a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link  text-dark-shade" href="/words?page=<%= Number(page)-1%>"><</a></li>
            <% } %>
    
            <li class="page-item disabled"><a class="page-link bg-transparent text-dark-accent border-0"><%= page %> / <%= pages %></a></li>
    
            <% if (page == pages) { %>
            <li class="page-item invisible"><a class="page-link">></a></li>
            <% } else { %>
            <li class="page-item"><a class="page-link text-dark-shade" href="/words?page=<%= Number(page)+1 %>">></a></li>
            <% } %>
        </ul>
    </nav>
<% } %>